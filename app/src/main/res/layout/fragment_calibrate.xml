<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_calibrate"
    android:background="@android:color/white">

    <Button
        android:id="@+id/button_calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/button_margin"
        android:background="@drawable/button_menu"
        android:text="@string/calibrate"
        android:textSize="@dimen/button_text_size" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_calibrate"
        android:layout_alignBottom="@+id/button_calibrate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/button_margin_start"
        android:background="@drawable/button_menu"
        android:text="@string/start"
        android:textSize="@dimen/button_text_size" />

</RelativeLayout>